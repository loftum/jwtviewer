<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:JwtViewer.ViewModels"
        xmlns:avaloniaEdit="https://github.com/avaloniaui/avaloniaedit"
        xmlns:views="clr-namespace:JwtViewer.Views"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
        x:Class="JwtViewer.Views.MainWindow"
        Title="Jwt viewer"
        Icon="/Assets/icon.ico"
        Width="1000" Height="800"
        FontSize="{Binding FontSize}"
        >
    
    <Window.DataContext>
        <viewModels:MainWindowViewModel/>
    </Window.DataContext>
    
    <Window.Styles>
        <Style Selector="avaloniaEdit|TextEditor">
            <!-- <Setter Property="FontSize" Value="{Binding FontSize}"></Setter> -->
        </Style>
    </Window.Styles>
    
    <Grid ColumnDefinitions="*,5,*">
        
        <avaloniaEdit:TextEditor Grid.Column="0"
                                 x:Name="Input"
                                 FontFamily="Monaco"
                                 ShowLineNumbers="true"
                                 TextChanged="InputChanged"
                                 WordWrap="false"
                                 HorizontalScrollBarVisibility="Disabled"
                                 VerticalScrollBarVisibility="Disabled"
                                 IsEnabled="true"
                                 IsReadOnly="false"
        />
            <GridSplitter Grid.Column="1"
                          Width="5" />
            <Grid Grid.Column="2" ColumnDefinitions="*,*">
                <views:JwtEditor
                    Grid.Column="0"
                    x:Name="AccessToken"
                    FontSize="{Binding FontSize}"
                    
                    />
                <views:JwtEditor
                    Grid.Column="1"
                    x:Name="IdToken"
                    FontSize="{Binding FontSize}"
                />
            </Grid>
    
    </Grid>
    
</Window>